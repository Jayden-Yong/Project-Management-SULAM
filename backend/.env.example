# App Configuration
APP_NAME=Volunteerism App Backend
ENVIRONMENT=development
DEBUG=True

# Server Configuration
HOST=0.0.0.0
PORT=8000

# CORS Configuration (Add your frontend URLs here, comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Database Configuration
# IMPORTANT: For production (Render/serverless), use Transaction Pooler (port 6543)
# Format: postgresql://postgres.[project-ref]:[password]@aws-0-ap-southeast-1.pooler.supabase.com:6543/postgres
DATABASE_URL=postgresql://postgres.your-project-ref:your-password@aws-0-ap-southeast-1.pooler.supabase.com:6543/postgres

# Clerk Authentication
# Get this from Clerk Dashboard -> Configure -> API Keys -> Issuer URL
CLERK_ISSUER=https://your-app-id.clerk.accounts.dev
